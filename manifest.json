{
    "name": "designr",
    "version": "1.0.0",
    "description": "Save snapshots of web components and designs made for web designers and developers",
    "background": {
        "scripts": ["js/background.js"]
      },
    "browser_action": {
      "default_title": "designr",
      "default_popup": "index.html"
    },
    "manifest_version": 2,
    "permissions": [
        "storage",
        "tabs",
		"contextMenus",
        "activeTab"
    ]
  }